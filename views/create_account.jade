extends layout

block content
  div(class="create-screen")
    div(class="title") 
      |Create Account
    div(class="createform")
      div(class="text username")
        label Username: 
        input(type="text", id="newuser")
      div(class="text password")
        label Password: 
        input(type="password", id="newpass1")
      div(class="text password")
        label Confirm Password: 
        input(type="password", id="newpass2")
      button(class="btn left create-submit") Submit
      button(class="btn right return-to-signin") Return
